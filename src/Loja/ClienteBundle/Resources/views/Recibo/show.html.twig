{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Recibo</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ entity.data|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Servicoid</th>
                <td>{{ entity.servico }}</td>
            </tr>
            <tr>
                <th>Clienteid</th>
                <td>{{ entity.cliente }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('recibo') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('recibo_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
